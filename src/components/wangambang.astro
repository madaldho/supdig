---
// Mengimpor gambar WhatsApp dari assets
import { Image } from "astro:assets";
import waImage from "../assets/wa.webp"; // Ganti dengan path gambar kamu
---

<a
  href="https://wa.me/212716164271"
  target="_blank"
  class="floating-whatsapp"
  aria-label="WhatsApp Chat"
>
  <Image
    src={waImage}
    alt="Chat WhatsApp"
    width={90}
    height={90}
    class="whatsapp-icon"
    loading="lazy"
  />
</a>

<style>
  /* Mengatur posisi gambar mengambang di pojok kanan bawah */
  .floating-whatsapp {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    background-color: transparent;
    border-radius: 50%;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
  }

  /* Mengubah ukuran atau efek saat hover */
  .floating-whatsapp:hover {
    transform: scale(1.1);
  }

  .whatsapp-icon {
    display: block;
    width: 60px;
    height: 60px;
  }
</style>
