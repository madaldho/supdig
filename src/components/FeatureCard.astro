---
// src/components/FeatureCard.astro
interface Props {
  title: string;
  features: string[];
  productName: string;
  ctaText: string;
  ctaLink: string;
}

const { title, features, productName, ctaText, ctaLink } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg p-8 max-w-2xl mx-auto">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-900">{title}</h2>
  <ul class="space-y-4 mb-8">
    {features.map((feature) => (
      <li class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 mr-3" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        <span class="text-gray-700">{feature}</span>
      </li>
    ))}
  </ul>
  <div class="text-center">
    <p class="text-xl font-semibold mb-4 text-blue-600">{productName}</p>
    <a href={ctaLink} class="inline-block bg-blue-600 text-white py-3 px-8 rounded-full hover:bg-blue-700 transition-colors duration-300 text-lg font-medium">
      {ctaText}
    </a>
  </div>
</div>