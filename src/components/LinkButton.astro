---
// src/components/LinkButton.astro
interface Props {
  title: string;
  subtitle: string;
  imageUrl: string;
  redirectUrl: string;
}

const { title, subtitle, imageUrl, redirectUrl } = Astro.props;
---

<a
  href={redirectUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="group block bg-white rounded-lg p-4 hover:bg-gray-50 transition-all duration-300 shadow-md max-w-2xl mx-auto mb-6 transform hover:scale-105"
>
  <div class="flex items-center gap-4">
    {/* Image container */}
    <div class="flex-shrink-0">
      <img
        src={imageUrl || "/favicon.png"}
        alt=""
        class="w-16 h-16 rounded-full object-cover"
      />
    </div>

    {/* Content container */}
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between gap-2">
        <div class="min-w-0"> {/* Added min-w-0 to enable text wrapping */}
          <h2 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors mb-1">{title}</h2>
          <p class="text-sm text-gray-500 break-words">{subtitle}</p>
        </div>
        
        <div class="flex-shrink-0 mt-1">
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round"
          >
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </div>
      </div>
    </div>
  </div>
</a>